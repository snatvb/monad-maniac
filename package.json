{
  "name": "monad-maniac",
  "version": "0.0.1",
  "description": "monads with right rules",
  "scripts": {
    "ts:cjs": "yarn tsc -p ts/cjs.tsconfig.json",
    "ts:es": "yarn tsc -p ts/es.tsconfig.json",
    "ts:typedefs": "yarn tsc -p ts/types.tsconfig.json && mv defs/* . && rimraf defs",
    "ts:all": "yarn ts:cjs && yarn ts:es && yarn ts:typedefs",
    "docs": "./scripts/build-docs",
    "build": "yarn clean && yarn ts:all",
    "clean": "rimraf ./*.d.ts ./*.d.ts.map dist",
    "tdd": "jest --watch",
    "test": "jest",
    "tests": "yarn test && yarn smoke-test",
    "smoke-test": "rimraf smoke-test && node smoke-test.js && rimraf smoke-test",
    "prepublishOnly": "yarn tests && yarn build",
    "postpublish": "yarn clean"
  },
  "keywords": [
    "monad",
    "ts",
    "maybe"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "files": [
    "*.d.ts",
    "*.d.ts.map",
    "dist",
    "src"
  ],
  "author": "snatvb",
  "license": "UNLICENSED",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "statements": 100,
        "lines": 100
      }
    }
  },
  "devDependencies": {
    "@types/jest": "24.0.13",
    "jest": "24.8.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "typedoc": "0.14.2",
    "typescript": "3.4.5",
    "coveralls": "3.0.3"
  }
}
